@model Nop.Plugin.Payments.IpayDoubleEight.Models.ConfigurationModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="PaymentIpayDoubleEight" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T("Plugins.Payments.IpayEightEight.Instructions"))
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="MerchantCode_OverrideForStore" asp-input="MerchantCode" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="MerchantCode" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MerchantCode" />
                        <span asp-validation-for="MerchantCode"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="MerchantKey_OverrideForStore" asp-input="MerchantKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="MerchantKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MerchantKey" />
                        <span asp-validation-for="MerchantKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="IpayDoubleEightUrl_OverrideForStore" asp-input="IpayDoubleEightUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="IpayDoubleEightUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="IpayDoubleEightUrl" />
                        <span asp-validation-for="IpayDoubleEightUrl"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="PaymentId_OverrideForStore" asp-input="PaymentId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="PaymentId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PaymentId" />
                        <span asp-validation-for="PaymentId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="PaymentMethod_OverrideForStore" asp-input="PaymentMethod" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="PaymentMethod" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="PaymentMethod" asp-items="Model.AvailablePayments" asp-multiple="true" />
                        <span asp-validation-for="PaymentMethod"></span>
                    </div>
                    <script>
                        $(document).ready(function() {
                            var paymentMethodInput = $('#@Html.IdFor(model => model.PaymentMethod)')
                                .data("kendoMultiSelect");
                            paymentMethodInput.setOptions({
                                autoClose: false,
                                filter: "contains",
                            });

                            @if (Model.AvailablePayments.Count == 0)
                            {
                                <text>
                                    auntyIdsInput.setOptions({
                                        enable: false,
                                        placeholder: 'No payment available'
                                    });
                                    auntyIdsInput._placeholder();
                                    auntyIdsInput._enable();
                                </text>
                            }
                        });
                    </script>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="Currency_OverrideForStore" asp-input="Currency" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="Currency" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Currency" />
                        <span asp-validation-for="Currency"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="Lang_OverrideForStore" asp-input="Lang" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="Lang" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Lang" />
                        <span asp-validation-for="Lang"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="SignatureType_OverrideForStore" asp-input="SignatureType" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="SignatureType" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="SignatureType" />
                        <span asp-validation-for="SignatureType"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="AdditionalFee_OverrideForStore" asp-input="AdditionalFee" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="AdditionalFee" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFee" />
                        <span asp-validation-for="AdditionalFee"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="AdditionalFeePercentage_OverrideForStore" asp-input="AdditionalFeePercentage" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="AdditionalFeePercentage" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFeePercentage" />
                        <span asp-validation-for="AdditionalFeePercentage"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>